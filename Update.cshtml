
@{
    ViewBag.Title = "Update";
}

<h2>Editar</h2>

<title>  Editar Cidade </title>
<h3 class="text-center mb-3 mt-3 text-info">Editar Cidade</h3>

<form method="post" action="/estado/update">
    <input type="hidden" name="id" value="@ViewBag.Cidade.id" />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" name="nome" id="campo-nome" class="form-control" value="@ViewBag.Cidade.Nome" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-numhabitantes">Numero habitantes</label>
                <input type="text" name="numHabitantes" id="campo-numhabitantes" class="form-control" value="@ViewBag.Cidades.numHabitantes"01 />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success float-right"><i class="fas fa-save"></i> Salvar</button>
        </div>
    </div>
</form>

