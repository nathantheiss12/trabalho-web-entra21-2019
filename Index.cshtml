
@{
    ViewBag.Title = "Index";
}
<title> Lista de estados </title>
<h3 class="text-center mb-3 mt-3 text-info">Lista de Estados</h3>

<div class="row">
    <div class="col-12">
        <a href="/estado/cadastro" class="btn btn-primary float-right mb-3">
            <i class="fas fa-plus"> Novo Estado</i>
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Model.Estado estado in ViewBag.Estados)
        {
            <tr>
                <td>@estado.id</td>
                <td>@estado.nome</td>
                <td>estado.sigla</td>
                <td>
                    <a href="/categoria/editar?id=@estado.id" class="btn btn-primary"><i class="fas fa-pen"></i> Editar</a>
                    <a href="/categoria/apagar?id=@estado.id" class="btn btn-danger"><i class="fas fa-trash"></i>Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

